    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="0dip"
        android:paddingRight="3dip"
        android:paddingTop="10dip"
        android:paddingBottom="2dip"
        tools:context="com.matt.cards.app.MainActivity"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_marginLeft="145dip"
        android:layout_marginRight="-2dip"
        android:layout_marginBottom="75dip"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:id="@+id/icon_view3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff27ae00">

        <GridView
            android:id="@+id/grid"
            android:layout_width="fill_parent"
                android:layout_height="match_parent"/>

    </RelativeLayout>


    <it.gmariotti.cardslib.library.view.CardGridView
        android:layout_width="364dp"
        android:layout_height="75dp"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="-2dip"
        android:layout_marginBottom="-2dip"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:id="@+id/bottomGrid"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000690"/>

    <it.gmariotti.cardslib.library.view.CardGridView
    android:layout_width="142dp"
    android:layout_height="150dp"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="-2dip"
    android:layout_marginBottom="75dip"
    android:verticalSpacing="3dp"
    android:horizontalSpacing="200dp"
    android:stretchMode="columnWidth"
    android:gravity="center"
    android:id="@+id/middleGrid"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#ffff000b"/>

    <it.gmariotti.cardslib.library.view.CardGridView
    android:layout_width="211dp"
    android:layout_height="90dp"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="-2dip"
    android:layout_marginBottom="226dip"
    android:verticalSpacing="3dp"
    android:horizontalSpacing="2dp"
    android:stretchMode="columnWidth"
    android:gravity="center"
    android:id="@+id/TopGrid"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#ffff7800"/>

    <it.gmariotti.cardslib.library.view.CardGridView
    android:layout_width="144dp"
    android:layout_height="90dp"
    android:layout_marginLeft="214dip"
    android:layout_marginRight="-2dip"
    android:layout_marginBottom="226dip"
    android:verticalSpacing="3dp"
    android:horizontalSpacing="2dp"
    android:stretchMode="columnWidth"
    android:gravity="center"
    android:id="@+id/TopGrid1"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#ff00b0ff"/>

    <RelativeLayout
    android:id="@+id/middleView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="-2dip"
    android:layout_marginBottom="75dip"
    android:verticalSpacing="3dp"
    android:horizontalSpacing="200dp"
    android:stretchMode="columnWidth"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

    <SlidingDrawer
    android:id="@+id/SlidingDrawer"
    android:layout_width="wrap_content"
    android:layout_height="320dip"
    android:layout_alignParentBottom="true"
    android:content="@+id/contentLayout"
    android:handle="@+id/slideButton"
    android:orientation="vertical"
    android:padding="10dip">

    <Button
        android:id="@+id/slideButton"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:background="@null">
    </Button>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip"
        android:background="#D93c3f40">

        <!--<Button
            android:id="@+id/Button01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Button 1" >
        </Button>

        <Button
            android:id="@+id/Button02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Button 2" >
        </Button>

        <Button
            android:id="@+id/Button03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Button 3" >
        </Button>-->

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="#000000"
            android:text="@string/apps"/>

        <GridView
            android:id="@+id/gridMain"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnWidth="50dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="20dp"
            android:horizontalSpacing="70dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/>

        <!--<GridView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="90dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="50dp"
            android:horizontalSpacing="20dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/>-->

    </LinearLayout>
</SlidingDrawer>

</RelativeLayout>